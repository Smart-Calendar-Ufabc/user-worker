{
  "name": "user-worker",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "env": "dotenv -e .dev.vars",
    "migrate:dev": "dotenv -e .dev.vars -- npx prisma migrate dev",
    "start": "wrangler dev",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/src/use-cases/*.spec.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240222.0",
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/pg": "^8.11.4",
    "jest": "^29.7.0",
    "prisma": "^5.10.2",
    "ts-jest": "^29.1.2",
    "typescript": "^5.0.4",
    "vite-tsconfig-paths": "^4.3.1",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^5.12.1",
    "@prisma/client": "^5.10.2",
    "@prisma/extension-accelerate": "^1.0.0",
    "@rocketseat/eslint-config": "^2.2.2",
    "bcryptjs": "^2.4.3",
    "dotenv-cli": "^7.4.1",
    "hono": "^4.2.1",
    "pg": "^8.11.5",
    "zod": "^3.22.4"
  }
}
